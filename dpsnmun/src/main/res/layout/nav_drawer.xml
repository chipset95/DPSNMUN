<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/dpsnmundark"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoiv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:src="@drawable/bg"
        android:contentDescription="@string/app_name" />

    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.34"
        android:choiceMode="singleChoice"
        android:divider="@color/dpsnmun"
        android:dividerHeight="1dp"
        android:background="@color/dpsnmundark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">

        <LinearLayout
            android:id="@+id/dev_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/minute_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="0dp"
                android:src="@drawable/kartik" />

            <TextView
                android:paddingTop="@dimen/minute_margin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Developed by:"
                android:textSize="15sp"
                android:textColor="?attr/colorAccent"
                android:gravity="center" />

            <TextView
                android:paddingBottom="@dimen/minute_margin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Kartik Arora"
                android:textSize="20sp"
                android:textColor="?attr/colorAccent"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idea_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="0dp"
                android:src="@drawable/aryan" />

            <TextView
                android:paddingTop="@dimen/minute_margin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Idea by:"
                android:textSize="15sp"
                android:textColor="?attr/colorAccent"
                android:gravity="center" />

            <TextView
                android:paddingBottom="@dimen/minute_margin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Aditya Aryan"
                android:textSize="20sp"
                android:textColor="?attr/colorAccent"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>