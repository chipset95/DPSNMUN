<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/dpsnmundark"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_contact"
        android:textColor="?attr/colorAccent"
        android:fontFamily="sans-serif-thin"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_marginTop="@dimen/big_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fbButton"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_fb" />

        <ImageButton
            android:id="@+id/twButton"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_tw" />

        <ImageButton
            android:id="@+id/mailButton"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_mail" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/big_margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/c1"
        android:textColor="@color/clouds"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp" />

    <TextView
        android:layout_marginTop="@dimen/minute_margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/c2"
        android:textColor="@color/clouds"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"/>

    <TextView
        android:layout_marginTop="@dimen/minute_margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/c3"
        android:textColor="@color/clouds"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"/>


    <Button
        android:id="@+id/callButton"
        android:layout_marginTop="@dimen/minute_margin"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/clouds"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:text="@string/c4" />

</LinearLayout>